<%= form_for(@user) do |f| %>
	<fieldset>
		<%= render 'errors' %>
		<%= f.label :email %>
		<%= f.email_field :email %>

		<%= f.label :password %>
		<%= f.password_field :password %>

		<%= f.label :password_confirmation, 'Confirm Password' %>
		<%= f.password_field :password_confirmation %>

		<%= f.submit %>

	</fieldset>
<% end %>

